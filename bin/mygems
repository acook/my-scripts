#!/usr/bin/env ruby

puts 'updating ruby gem..'
puts `gem update --system`

raise 'gem command did not complete successfully, make sure it is installed then this script again.' unless $?.zero?
puts 'installing gems..'

gems_to_install = %w{pry unroller yard pry-doc bundler yard-doc-core wirble}
gems_to_install.each do |gem|
  puts "installing #{gem}.."

  puts `gem install #{gem}`
end

