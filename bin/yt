#!/usr/bin/env bash

FILE="$1"

if [[ "$2" == "-x" ]]; then
  FORMAT="bestaudio"
  MORE_OPTS="-x"
else
  FORMAT="bestvideo"
fi

BIN="yt-dlp"
OPTS="--write-description --write-sub --write-auto-sub --embed-subs --add-metadata --no-call-home --console-title"

$BIN $FILE --format $FORMAT $OPTS $MORE_OPTS
