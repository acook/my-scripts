#!/usr/bin/env bash

THIS=$_
GO_CONFIG="./.go"

# check for the presence of a config
if [ -a $GO_CONFIG ]; then
  # slurp the contents into a variable
  export GOPATH=$(<$GO_CONFIG)
else
  echo "no ./.go config found using PWD instead"
  export GOPATH=$(pwd)
fi

# if this script is being invoked directly
if [[ $THIS == $0 ]]; then
  # then run go with all the arguments we were passed
  go $*
fi
